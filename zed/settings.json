{
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "version": "2"
  },

  "always_treat_brackets_as_autoclosed": true,

  "collaboration_panel": { "button": false },

  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "inline": {
      "enabled": true
    }
  },

  "edit_predictions": {
    "mode": "subtle"
  },

  "lsp": {
    "gopls": {
      "initialization_options": {
        "staticcheck": true,
        "gofumpt": true
      }
    }
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "theme": {
    "mode": "dark",
    "dark": "Gruvbox Dark",
    "light": "Gruvbox Light"
  },

  "buffer_font_family": "IosevkaTerm Nerd Font",
  "buffer_font_weight": 300,
  "buffer_line_height": "standard",
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "terminal": {
    "font_size": 14,
    "font_weight": 300,
    "line_height": "standard",
    "cursor_shape": "bar"
  },

  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never",
    "use_smartcase_find": true
  }
}
